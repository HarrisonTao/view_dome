<resources>

    <!-- Base application theme. -->

    <style name="AppThemeWelcome" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/page_startup</item>
    </style>


    <!--主题样式-->
    <style name="dialog_pay_theme" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item><!--弹框背景灰度-->
    </style>


    <style name="home_tv_weight">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/cm_height_5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_15_no_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_ff33</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="act_personage_rl_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cm_height_46</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:layout_marginTop">@dimen/cm_height_1</item>
    </style>
    <style name="jft_ll_style_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cm_height_46</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:layout_marginTop">@dimen/cm_height_1</item>
    </style>
    <style name="jft_tv_common_left_size">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/font_ff33</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="jft_tv_common_right_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/font_ff66</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tv_submit">
        <item name="android:layout_marginTop">@dimen/cm_height_20</item>
        <item name="android:layout_marginRight">@dimen/cm_height_10</item>
        <item name="android:layout_marginLeft">@dimen/cm_height_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cm_height_45</item>
        <item name="android:background">@drawable/button_shep</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="tv_font_99_size_13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/font_ff99</item>
    </style>



    <style name="tv_me_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cm_height_45</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:drawablePadding">@dimen/cm_height_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/cm_height_10</item>
        <item name="android:paddingRight">@dimen/cm_height_10</item>
        <item name="android:textColor">@color/font_ff33</item>
        <item name="android:textSize">@dimen/font_size_14</item>

    </style>

</resources>
