<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/main_color" android:state_selected="true"/>
    <item android:color="#FF666666" android:state_selected="false"/>

    <!-- 按压时 -->
    <item android:color="@color/main_color" android:state_pressed="true" />
    <!-- 被选中时 -->
    <item android:color="@color/main_color" android:state_selected="true" />
    <!-- 被激活时 -->
    <item android:color="@color/main_color" android:state_activated="true" />
    <!-- 默认时 -->
    <item android:color="#FF666666" />
</selector>