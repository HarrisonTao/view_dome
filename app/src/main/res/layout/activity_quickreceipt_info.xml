<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".home.receipt.activity.QuickReceiptInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/cm_height_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="收款人"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>

        <View style="@style/line_horizontal_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="身份证号"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>

        <View style="@style/line_horizontal_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="收款金额"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>

        <View style="@style/line_horizontal_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手续费"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_fee_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>

        <View style="@style/line_horizontal_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="储蓄卡"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_debit_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>

        <View style="@style/line_horizontal_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="信用卡"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_credit_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>

        <View style="@style/line_horizontal_1" />


        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:layout_marginTop="@dimen/cm_height_1"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="选择消费地区"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/btn_xjit"
                android:gravity="center_vertical"
                android:hint="请选择消费地区"
                android:paddingLeft="@dimen/cm_height_14"
                android:paddingRight="@dimen/cm_height_12"
                android:text=""
                android:textColor="@color/font_ff33" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cm_height_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cm_height_45"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/cm_height_12">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号码"
                android:textColor="@color/font_ff66" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/cm_height_14"
                android:text=""
                android:textColor="@color/font_ff33"
                android:textSize="@dimen/font_size_13" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/tv_submit"
        android:text="提交" />
</LinearLayout>