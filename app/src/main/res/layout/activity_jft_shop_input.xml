<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="真实姓名"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/horizontal_line_height"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="身份证号"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_idle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_1"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/cm_height_10">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="银行卡号"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/et_bank_account_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入卡号"
            android:inputType="phone"
            android:textColor="@color/font_ff33"
            android:textColorHint="@color/font_ff99"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_1"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/cm_height_10"
        android:visibility="visible">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="开户行"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/btn_xjit"
            android:gravity="center_vertical"
            android:hint="请选择开户行"
            android:text=""
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/horizontal_line_height"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/cm_height_10"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="邮箱"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入邮箱"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/font_ff33"
            android:textColorHint="@color/font_ff99"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/horizontal_line_height"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/cm_height_10">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="手机号"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入银行预留手机号"
            android:inputType="phone"
            android:textColor="@color/font_ff33"
            android:textColorHint="@color/font_ff99"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_1"
        android:background="@color/color_white">

        <TextView
            android:layout_width="@dimen/cm_height_88"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/cm_height_10"
            android:text="验证码"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/cm_height_88"
            android:layout_marginRight="@dimen/cm_height_90"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:text=""
            android:textColor="@color/font_ff33"
            android:textColorHint="@color/font_ff99"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_stroke_14"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="获取验证码"
            android:textColor="@color/main_text"
            android:textSize="11dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/tv_submit"
        android:text="确定" />

</LinearLayout>