<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context=".start.ForgetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/font_ff33"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_phone"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/straight_transparent"
            android:hint="请输入手机号"
            android:textColor="@color/font_ff33"
            android:textColorHint="#ffc3c3c3"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/view_1dp_gray_heng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/font_ff33"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_sms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/straight_transparent"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:textColor="@color/font_ff33"
            android:textColorHint="#ffc3c3c3"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_stroke_14"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="获取验证码"
            android:textColor="@color/main_text"
            android:textSize="11dp" />
    </LinearLayout>

    <View style="@style/view_1dp_gray_heng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="登录密码"
            android:textColor="@color/font_ff33"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入新的登录密码"
            android:inputType="textPassword"
            android:background="@drawable/straight_transparent"
            android:textColor="@color/font_ff33"
            android:textColorHint="#ffc3c3c3"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/view_1dp_gray_heng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/font_ff33"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_c_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:background="@drawable/straight_transparent"
            android:hint="请再次输入新的登录密码"
            android:textColor="@color/font_ff33"
            android:textColorHint="#ffc3c3c3"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/view_1dp_gray_heng" />
    <TextView
        android:id="@+id/tv_confirm"
        style="@style/app_bt"
        android:layout_marginTop="48dp"
        android:text="确定"/>
</LinearLayout>