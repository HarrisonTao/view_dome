<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="@dimen/cm_height_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cm_height_10"
                android:background="@mipmap/card_bg">


                <LinearLayout
                    android:id="@+id/ll_crad_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cm_height_10"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_bank_logo"
                        android:layout_width="@dimen/cm_height_28"
                        android:layout_height="@dimen/cm_height_28" />

                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/cm_height_12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_end_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/cm_height_12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/ll_crad_info"
                    android:layout_marginLeft="@dimen/cm_height_13"
                    android:layout_marginRight="@dimen/cm_height_13"
                    android:background="@color/white" />

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_1"
                    android:layout_marginLeft="@dimen/cm_height_13"
                    android:layout_marginTop="@dimen/cm_height_13"
                    android:layout_marginRight="@dimen/cm_height_13"
                    android:layout_marginBottom="@dimen/cm_height_8">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_statement_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_1"
                    android:layout_marginLeft="@dimen/cm_height_13"
                    android:layout_marginRight="@dimen/cm_height_13">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡片额度"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_repayment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/cm_height_13"
                android:paddingTop="@dimen/cm_height_17">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款金额："
                        android:textColor="@color/font_ff99"
                        android:textSize="@dimen/font_size_13" />

                    <TextView
                        android:id="@+id/tv_repayment_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/font_size_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_repayment_fee_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_ff99"
                    android:textSize="@dimen/font_size_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/cm_height_13"
                android:paddingTop="@dimen/cm_height_17">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款次数费："
                        android:textColor="@color/font_ff99"
                        android:textSize="@dimen/font_size_13" />

                    <TextView
                        android:id="@+id/frequency_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_ff99"
                        android:textSize="@dimen/font_size_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_count_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/font_ff99"
                    android:textSize="@dimen/font_size_13" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/cm_height_10"
                android:layout_marginTop="@dimen/cm_height_10"
                android:background="@color/bg_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_color"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/cm_height_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="预留额度："
            android:textColor="@color/font_ff66"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:id="@+id/tv_min_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/cm_height_70"
            android:textColor="@color/main_color"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15" />

    </RelativeLayout>
</RelativeLayout>