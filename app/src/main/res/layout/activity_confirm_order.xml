<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:paddingTop="15dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_marginLeft="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff666666"
                                android:textSize="14dp"
                                tools:text="" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:textColor="#ff666666"
                                android:textSize="14dp"
                                tools:text="" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_address"
                            android:drawableLeft="@mipmap/ic_position"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:textColor="#ff333333"
                            android:textSize="12dp"
                            tools:text="" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_jiant" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@mipmap/btn_jia"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:padding="18dp"
                        android:text="完善收货信息" />
                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <ImageView
                        android:id="@+id/iv_content"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            tools:text="" />

                        <TextView
                            android:id="@+id/tv_goods_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#ff999999"
                            android:textSize="11dp"
                            tools:text="" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffff3a3a"
                                android:textSize="18dp"
                                tools:text="￥0.00" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="x"
                                    android:textColor="#ff999999"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=""
                                    android:textColor="#ff999999"
                                    android:textSize="14dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <View
                    style="@style/line_horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/ll_express"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="13dp"
                        android:paddingTop="15dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费"
                            android:textColor="@color/font_ff33"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/tv_exp_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#ff000000"
                            android:textSize="13dp"
                            tools:text="" />
                    </RelativeLayout>

                    <View
                        style="@style/line_horizontal"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RelativeLayout
                        android:id="@+id/rl_send_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="13dp"
                        android:paddingTop="15dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送方式"
                            android:textColor="@color/font_ff33"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/tv_send_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="0dp"
                            android:text=""
                            android:textColor="#ff000000"
                            android:textSize="13dp" />
                    </RelativeLayout>

                    <View
                        style="@style/line_horizontal"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="13dp"
                        android:paddingTop="15dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买家留言"
                            android:textColor="#ff333333"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:hint="备注内容可选填"
                            android:textColor="@color/font_ff33"
                            android:textColorHint="#ffc3c3c3"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <View
                        style="@style/line_horizontal"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="13dp"
                        android:paddingTop="15dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#ff333333"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_tot_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共件商品"
                            android:textColor="@color/font_ff33"
                            android:textSize="15dp" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小计:"
                            android:textColor="@color/font_ff33"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_tot_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="#FFFF3131"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="15dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用积分"
                            android:textColor="@color/font_ff33"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_point"
                            android:layout_width="80dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/rect_stroke_d"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_available_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:text="（可用积分）"
                            android:textColor="#ff999999"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv_redus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="#ffff3131"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/iv_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/btn_xuanz_c" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="应付："
                    android:textColor="#ff333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textColor="#FF3A3A"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_exchange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/main"
                android:gravity="center"
                android:padding="18dp"
                android:text="提交订单"
                android:textColor="#ffffffff"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_tran"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBlack80"
        android:visibility="gone" />
</FrameLayout>