<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_10"
        android:paddingLeft="@dimen/cm_height_13"
        android:paddingRight="@dimen/cm_height_13">

        <TextView
            android:layout_width="@dimen/cm_height_95"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="原密码"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/et_old_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入原登录密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textSize="@dimen/font_size_13"
            />
    </LinearLayout>

    <View
        style="@style/line_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_1"
        android:paddingLeft="@dimen/cm_height_13"
        android:paddingRight="@dimen/cm_height_13">

        <TextView
            android:layout_width="@dimen/cm_height_95"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/cm_height_95"
            android:layout_toLeftOf="@+id/tv_code"
            android:background="@null"
            android:hint="请输入新登录密码"
            android:inputType="textPassword"
            android:textSize="@dimen/font_size_13" />

    </RelativeLayout>

    <View
        style="@style/line_horizontal"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_1"
        android:paddingLeft="@dimen/cm_height_13"
        android:paddingRight="@dimen/cm_height_13">

        <TextView
            android:layout_width="@dimen/cm_height_95"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/et_next_new_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/cm_height_95"
            android:layout_toLeftOf="@+id/tv_code"
            android:background="@null"
            android:hint="请再次输入新登录密码"
            android:inputType="textPassword"
            android:textSize="@dimen/font_size_13" />

    </RelativeLayout>

    <View
        style="@style/line_horizontal"/>

    </LinearLayout>
    <TextView
        android:background="@drawable/button_shep"
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_44"
        android:layout_marginLeft="@dimen/cm_height_15"
        android:layout_marginTop="@dimen/cm_height_48"
        android:layout_marginRight="@dimen/cm_height_15"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"
        />


</RelativeLayout>