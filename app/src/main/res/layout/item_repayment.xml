<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/main_shape"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_size_14"
            >

            <ImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="@dimen/cm_height_28"
                android:layout_height="@dimen/cm_height_28"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/cm_height_10"
                android:layout_toRightOf="@+id/iv_bank_logo"
                android:text="交通银行(9051)"
                android:textColor="@color/font_ff33" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cred_type_shaep"
                android:paddingTop="@dimen/cm_height_5"
                android:paddingBottom="@dimen/cm_height_5"
                android:paddingRight="@dimen/cm_height_12"
                android:paddingLeft="@dimen/cm_height_12"
                android:textColor="@color/main_text"
                android:textSize="12sp"
                />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cm_height_17"
            android:layout_marginBottom="@dimen/cm_height_17">
            <TextView
                android:id="@+id/tv_count_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:text="￥5623.00"
                android:textColor="@color/font_ff33" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款总额(元)"
                android:textColor="@color/color_A4A5"
                android:textSize="13sp"
                android:layout_below="@+id/tv_count_money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/font_size_11"
                />


        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/cm_height_20"
    android:layout_marginLeft="@dimen/cm_height_20"
    android:background="@drawable/repayment_item_shape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:layout_marginTop="@dimen/cm_height_16"
        android:layout_marginBottom="@dimen/cm_height_14"
        >
        <TextView
            android:id="@+id/has_repayment_money"
            style="@style/tv_font_99_size_13"
            android:layout_centerHorizontal="true" />
        <TextView
            style="@style/tv_font_99_size_13"
            android:text="已还款"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/has_repayment_money"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:layout_marginTop="@dimen/cm_height_16"
        android:layout_marginBottom="@dimen/cm_height_14"
        >
        <TextView
            android:id="@+id/tv_fee_money"
            style="@style/tv_font_99_size_13"
            android:layout_centerHorizontal="true" />
        <TextView
            style="@style/tv_font_99_size_13"
            android:text="手续费"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_fee_money"
            />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cm_height_16"
            android:layout_marginBottom="@dimen/cm_height_14"
            android:layout_weight="1"

            >
            <TextView
                android:id="@+id/tv_min_money"
                style="@style/tv_font_99_size_13"
                android:layout_centerHorizontal="true" />
            <TextView
                style="@style/tv_font_99_size_13"
                android:text="预留额度"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_min_money"
                />


        </RelativeLayout>





</LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cm_height_14">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/timeText"
                    style="@style/tv_font_99_size_13"
                    android:text="计划时间" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/tv_font_99_size_13"
                    android:layout_toRightOf="@+id/timeText" />
            </RelativeLayout>



            <TextView
                android:layout_centerVertical="true"
                android:padding="@dimen/cm_height_4"
                android:gravity="center"
                android:minWidth="@dimen/cm_height_65"
                android:background="@drawable/shape_round_color_99_8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_cancel"
                style="@style/tv_font_99_size_13"
                android:text="取消"
                />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>