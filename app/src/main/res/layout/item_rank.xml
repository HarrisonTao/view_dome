<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="@dimen/cm_height_10"
    android:gravity="center"
    android:layout_marginBottom="1dp">


    <TextView
        android:id="@+id/tv_noun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@mipmap/one"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/white" />



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_header"
        android:layout_marginLeft="@dimen/cm_height_8"
        android:layout_width="@dimen/cm_height_44"
        android:layout_height="@dimen/cm_height_44"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/cm_height_7"
        android:layout_toLeftOf="@+id/iv_setting_header"
        android:scaleType="centerCrop"
        android:src="@mipmap/moren_tx"
        app:riv_border_color="@color/bg_color"
        app:riv_border_width="1dip"
        app:riv_oval="true" />

    <LinearLayout

        android:layout_marginLeft="@dimen/cm_height_15"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王*珺"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_number_people"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/cm_height_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队总人数156"
            android:textSize="11sp"
            android:textColor="@color/font_ff99"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="@dimen/cm_height_7"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130564"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="@dimen/cm_height_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总流水"
            android:textSize="11sp"
            android:textColor="@color/font_ff99"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="@dimen/cm_height_7"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="768.32"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="@dimen/cm_height_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖金"
            android:textSize="11sp"
            android:textColor="@color/font_ff99"/>

    </LinearLayout>
</LinearLayout>