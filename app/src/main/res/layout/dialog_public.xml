<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/ic_tank">

    <TextView
android:layout_marginTop="@dimen/cm_height_50"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="拨打电话"
        android:textColor="@color/font_ff33"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/cm_height_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginTop="@dimen/cm_height_30"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:layout_margin="@dimen/cm_height_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/font_ff99"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="43dp"
            android:background="@color/bg_color" />

        <TextView
            android:id="@+id/tv_safety_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main_color"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>