<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/cm_height_10">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cm_height_5"
        android:textColor="@color/font_ff33" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginTop="@dimen/cm_height_10"
        android:textColor="@color/font_ff99"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/cm_height_5"
        android:textColor="@color/font_ff33"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_fee_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/cm_height_10"
        android:textColor="@color/font_ff99"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/cm_height_10"
        android:background="@color/bg_color" />
</RelativeLayout>