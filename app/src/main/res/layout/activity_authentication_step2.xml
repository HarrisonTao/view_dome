<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/cm_height_15">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确认身份信息"
        android:textSize="16sp" />

    <TextView
        style="@style/tv_font_99_size_13"
        android:layout_marginTop="@dimen/cm_height_10"
        android:text="1.身份信息如有错误，请确认修改"
        android:textSize="11sp" />

    <TextView
        style="@style/tv_font_99_size_13"
        android:text="2.认证信息一经认证，不可修改，请仔细确认"
        android:textSize="11sp" />


    <RelativeLayout
        style="@style/act_personage_rl_item"
        android:layout_marginTop="@dimen/cm_height_32"
        android:background="@drawable/shape_round_color_99_8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名:" />

        <EditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/cm_height_78"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="身份证姓名"
            android:textColor="@color/font_ff99"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        style="@style/act_personage_rl_item"
        android:layout_marginTop="@dimen/cm_height_12"
        android:background="@drawable/shape_round_color_99_8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证号：" />

        <EditText
            android:id="@+id/tv_card_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/cm_height_78"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="确认身份证号码"
            android:textColor="@color/font_ff99"
            android:textSize="14sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_submit"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/cm_height_70"
        style="@style/tv_submit"
        android:text="确认提交"/>

</LinearLayout>