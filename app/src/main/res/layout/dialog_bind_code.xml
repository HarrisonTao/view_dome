<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/ic_tank">

    <TextView
        android:layout_marginTop="@dimen/cm_height_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cm_height_10"
        android:gravity="center"
        android:text="短信验证"
        android:textColor="@color/font_ff33"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cm_height_13"
        android:layout_marginTop="@dimen/cm_height_30"
        android:textColor="@color/font_ff99" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cm_height_13"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:textColor="@color/font_ff99"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="@color/main_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color" />


    <TextView
        android:id="@+id/tv_submit"
        style="@style/tv_submit"
        android:layout_marginTop="@dimen/cm_height_20"
        android:layout_marginBottom="@dimen/cm_height_20"
        android:text="确定" />
</LinearLayout>