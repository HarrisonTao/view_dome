<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginRight="@dimen/cm_height_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_sign"
            android:layout_width="@dimen/cm_height_5"
            android:layout_height="@dimen/cm_height_5"
            android:layout_marginLeft="@dimen/cm_height_12"
            android:src="@drawable/circle_shape" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="@dimen/cm_height_12"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/font_ff99"
            android:textSize="12sp" />


    </LinearLayout>


    <TextView
        android:layout_marginRight="@dimen/cm_height_10"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cm_height_12"
        android:layout_marginTop="@dimen/cm_height_2"
        android:layout_marginBottom="@dimen/cm_height_11"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/font_ff66"
        android:textSize="13sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color"
        />


</LinearLayout>