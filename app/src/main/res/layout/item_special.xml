        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_margin="8dp"
