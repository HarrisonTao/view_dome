<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cm_height_100"
    android:background="@mipmap/tixina_bg"
    android:padding="@dimen/cm_height_10">

    <TextView
        android:layout_marginTop="@dimen/cm_height_10"
        android:id="@+id/tv_card_name"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_marginTop="@dimen/cm_height_14"
        android:layout_below="@id/tv_card_name"
        android:id="@+id/tv_card_number"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="储蓄卡"
        android:textColor="#C4D1FF"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>