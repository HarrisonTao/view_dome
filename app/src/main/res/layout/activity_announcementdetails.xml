<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_web_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cm_height_23"
        android:gravity="center"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_web_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cm_height_10"
        android:layout_marginBottom="@dimen/cm_height_15"
        android:gravity="center"
        android:text=""
        android:textColor="@color/font_ff99"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_1"
        style="@style/line_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/cm_height_39" />

    <WebView
        android:id="@+id/mWebview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cm_height_25"
        android:layout_marginRight="@dimen/cm_height_25"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>