<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".mall.activity.PaySuccessActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:src="@mipmap/ic_chengg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="订单支付成功"
        android:textColor="@color/font_ff33"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_pay_moeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="￥239.80"
        android:textColor="@color/font_ff33"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="已付款成功，您的包裹正整装待发~"
        android:textColor="@color/font_ff99"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/tv_know"
        android:layout_marginTop="51dp"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:text="知道了"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/app_bt"
        android:gravity="center"
        />
</LinearLayout>