<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_10"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/cm_height_13"
        android:paddingRight="@dimen/cm_height_13">

        <TextView
            android:layout_width="@dimen/cm_height_95"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_13"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_50"
        android:layout_marginTop="@dimen/cm_height_1"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/cm_height_13"
        android:paddingRight="@dimen/cm_height_13">

        <TextView
            android:layout_width="@dimen/cm_height_95"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/font_ff33"
            android:textSize="@dimen/font_size_15" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/cm_height_95"
            android:layout_toLeftOf="@+id/tv_code"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="phone"
            android:textSize="@dimen/font_size_13" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_code"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_stroke_14"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="获取验证码"
            android:textColor="@color/main_text"
            android:textSize="11dp"

            />
    </RelativeLayout>



    <TextView
        android:background="@color/main_color"
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cm_height_44"
        android:layout_marginLeft="@dimen/cm_height_15"
        android:layout_marginTop="@dimen/cm_height_48"
        android:layout_marginRight="@dimen/cm_height_15"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_15" />




</LinearLayout>