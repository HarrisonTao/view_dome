<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cm_height_15">

        <TextView
            android:layout_marginRight="@dimen/cm_height_50"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/tv_recharge_title"
            style="@style/tv_15_no_top"
            />

        <TextView
            android:id="@+id/tv_recharge_type"
            style="@style/tv_15_no_top"
            android:layout_alignParentRight="true"
            android:text="" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/cm_height_15"
        android:layout_marginRight="@dimen/cm_height_15"
        android:layout_marginLeft="@dimen/cm_height_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_recharge_bankname"
            style="@style/tv_15_no_top"
            android:textSize="12sp"
            android:textColor="@color/font_ff99"
            android:text="建设银行（1234）" />

        <TextView
            android:id="@+id/tv_recharge_date"
            style="@style/tv_15_no_top"
            android:textSize="12sp"
            android:textColor="@color/font_ff99"
            android:layout_alignParentRight="true"
            android:text="2019-09-08 15:32" />
    </RelativeLayout>


    <View
        style="@style/line_horizontal_1"/>
</LinearLayout>