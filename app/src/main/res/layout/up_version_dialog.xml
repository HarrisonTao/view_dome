<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cm_height_12"
    android:background="@android:color/transparent">


    <LinearLayout
        android:minWidth="300dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="有新版本更新可用"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginRight="@dimen/cm_height_20"
            android:layout_marginLeft="@dimen/cm_height_20"
            android:layout_marginTop="@dimen/cm_height_10"
            android:minHeight="@dimen/cm_height_90"
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新"
            android:textColor="@color/font_ff33"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/font_ff99"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="43dp"
                android:background="@color/bg_color" />

            <TextView
                android:id="@+id/tv_up_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="更新"
                android:textColor="@color/main_color"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

