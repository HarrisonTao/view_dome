<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".mall.activity.MallPersonActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="183dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@mipmap/geren_bg">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_user_header"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/moren_tx"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#ffc9d5ff"
                    android:textSize="13dp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="108dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            app:bl_corners_radius="2.5dp"
            app:bl_solid_color="@color/white"
            tools:ignore="MissingPrefix">

            <LinearLayout
                android:id="@+id/ll_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collect_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/font_ff99"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="收藏"
                    android:textColor="@color/font_ff99"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="38dp"
                android:background="#FFE9E9E9" />

            <LinearLayout
                android:id="@+id/ll_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_point_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/font_ff99"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="积分"
                    android:textColor="@color/font_ff99"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableRight="@mipmap/btn_jiant_h"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="我的订单"
            android:textColor="#ff202020"
            android:textSize="14dp" />

        <View
            style="@style/line_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dfk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/btn_fuk"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="待付款"
                android:textColor="#ff000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_dsh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/btn_shouh"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="待收货"
                android:textColor="#ff000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_dpj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/btn_pingj"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="待评价"
                android:textColor="#ff000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_sh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/btn_shouh"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="售后"
                android:textColor="#ff000000"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_car"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@mipmap/btn_jiant_h"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="我的购物车"
            android:textColor="#FF3A3A3A"
            android:textSize="15dp" />

        <View
            style="@style/line_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@mipmap/btn_jiant_h"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="收货地址"
            android:textColor="#FF3A3A3A"
            android:textSize="15dp" />

        <View
            style="@style/line_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/tv_my_evaluate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@mipmap/btn_jiant_h"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="我的评价"
            android:textColor="#FF3A3A3A"
            android:textSize="15dp" />

        <View
            style="@style/line_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />
    </LinearLayout>

</LinearLayout>