<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/cm_height_16">

        <ImageView
            android:id="@+id/tv_bank_logo"
            android:layout_width="@dimen/cm_height_27"
            android:layout_height="@dimen/cm_height_27"
            android:layout_marginRight="@dimen/cm_height_10"
            android:src="@mipmap/ic_close" />

        <TextView
            android:id="@+id/tv_bank_name"
            style="@style/tv_15_no_top"
            />

        <TextView
            android:id="@+id/tv_bank_end_number"
            style="@style/tv_15_no_top"
            android:textColor="@color/font_ff99"
            android:textSize="13sp" />

    </LinearLayout>


    <View
        style="@style/line_horizontal_1"/>
</LinearLayout>