    <ImageView
        android:id="@+id/iv_c"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_gravity="end"
        android:scaleType="centerInside"
        android:src="@mipmap/btn_sc" />
</FrameLayout>
