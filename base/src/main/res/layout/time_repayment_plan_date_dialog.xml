<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/viewNull"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="190dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/main_text">
            <TextView
                android:id="@+id/tvDialogDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="取消"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="请选择还款日期"
                android:gravity="center"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvDialogWhole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="全选/反选"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/bg_color"
            android:layout_height="1dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择还款日期"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/tvMonth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月份"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="9dp"
            android:paddingBottom="7dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp"/>

        <TextView
            android:id="@+id/tvMonth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月份"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:paddingTop="9dp"
            android:paddingBottom="7dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="15dp"
            android:text="确认"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:background="@color/main_text"/>
    </LinearLayout>

</LinearLayout>